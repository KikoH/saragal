<% content_for :javascript_includes do %>
<%= javascript_include_tag "paintings" %>
<% end %>

<div id="main-container">
	<div id="book-container">
		<div id="book">
			<div class="coverback hard">
				<img src="https://s3.amazonaws.com/saragallery/graphiccover.png" alt="">
			</div>
			<% @handmades.each do |handmade| %>
			<div class="page" style="background-image: url('<%= handmade.image_url%>');">
				<div class="mask">
					<h2><%= link_to handmade.title, handmade_path(handmade) %></h2>
				</div>
				<img src="<%=handmade.image_url%>" alt="">
			</div>
			<% end %>
			<div class="coverback hard">
				<img src="https://s3.amazonaws.com/saragallery/backcover.png" alt="">
			</div>
		</div>
	</div>
</div>