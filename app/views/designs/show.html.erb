<div class="container-fluid fill">
	<div class="thumbnail">
		<%= image_tag @design.image_url(:large) %>
		<div class="caption text-center">
			<h1> <%= @design.title %> </h1>
			<p><%= @design.description %></p>
			<a href="mailto:saragazzaz@gmail.com?subject=Regarding <%= @design.title%>" target="_top">
				<button class="btn btn-success">Contact Me about this</button>
			</a>
		</div>

		<% if current_user.present? && current_user.admin %>
		<%= link_to "edit", edit_design_path(@design) %>
		<%= link_to "Delete", @design, method: :delete, data: { confirm: "Are you sure you want to delete this design?" } %>
		<% end %>

	</div>