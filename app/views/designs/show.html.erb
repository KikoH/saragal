<div class="container-fluid fill">
	<div class="thumbnail">
		<%= image_tag @design.image_url(:large) %>
		<div class="caption text-center">
			<h1> <%= @design.title %> </h1>
			<p><%= @design.description %></p>
			<a href="mailto:saragazzaz@gmail.com?subject=Regarding <%= @design.title%>" target="_top">
				<button class="btn btn-success">Contact Me about this</button>
			</a>
		</div>
		<% content_for :show do %>
		<% if current_user.present? && current_user.admin %>
		<%= button_to "edit", edit_design_path(@design), method: :get, class: "btn" %>
		<%= button_to "Delete", @design, method: :delete, data: { confirm: "Are you sure you want to delete this design?" }, class: "btn" %>
		<% end %>
		<%end %>
	</div>