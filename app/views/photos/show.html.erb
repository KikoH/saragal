<div class="container-fluid fill">
	<div class="thumbnail">
		<%= image_tag @photo.image_url(:large) %>
		<div class="caption text-center">
			<h1> <%= @photo.title %> </h1>
			<p><%= @photo.description %></p>
			<a href="mailto:saragazzaz@gmail.com?subject=Regarding <%= @photo.title%>" target="_top">
				<button class="btn btn-success">Contact Me about this</button>
			</a>
		</div>
		<% content_for :show do %>
		<% if current_user.present? && current_user.admin %>
		<%= button_to "edit", edit_photo_path(@photo), method: :get, class: "btn" %>
		<%= button_to "Delete", @photo, method: :delete, data: { confirm: "Are you sure you want to delete this photo?" }, class: "btn" %>
		<% end %>
		<% end %>
	</div>